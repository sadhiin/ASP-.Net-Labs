@model IEnumerable<Zero_Hunger.Models.Employee>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_NGOLayout.cshtml";
}


<h2>Current Employees</h2>
@*<h2>@Session["username"]</h2>*@
<p>
    @Html.ActionLink("New Employee", "Create", "NGODashboard", new {@class="btn btn-primary"})
</p>

@try
{
    if (TempData["type"] != null)
    {
        if (TempData["type"] == "ok")
        {
            <script>
swal("@TempData["info"].ToString()", "@TempData["success"].ToString()", "success");

            </script>
        }
        else
        {
<script>swal("@TempData["info"].ToString()","@TempData["error"].ToString()", "error");</script>
        }
    }
}
catch
{

}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Contract)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contract)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditEmp", new { id = item.EmployeeId }, new { @class = "btn btn-warning" }) 
                @*@Html.ActionLink("Details", "Details", new { id=item.EmployeeId }) |*@
                @Html.ActionLink("Delete", "DeleteEmp", new { id = item.EmployeeId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
